---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% assign posts_per_sitemap = 100 %}
  {% assign total_posts = site.posts.size %}
  {% assign sitemap_count = total_posts | divided_by: posts_per_sitemap | plus: 1 %}
  
  {% for i in (1..sitemap_count) %}
    {% assign start_index = i | minus: 1 | times: posts_per_sitemap %}
    {% assign end_index = start_index | plus: posts_per_sitemap | minus: 1 %}
    {% if end_index >= total_posts %}
      {% assign end_index = total_posts | minus: 1 %}
    {% endif %}
    
    {% if start_index < total_posts %}
      <sitemap>
        <loc>{{ site.url }}/sitemap-posts-{{ i }}.xml</loc>
        <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
      </sitemap>
    {% endif %}
  {% endfor %}
  <sitemap>
    <loc>{{ site.url }}/sitemap-pages.xml</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
  </sitemap>
</sitemapindex>
